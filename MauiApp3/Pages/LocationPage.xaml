<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.Pages.LocationPage"
            Title="الموقع " 
             BackgroundColor="#E7E9E4" 
             Shell.NavBarIsVisible="False" 
             FlowDirection="RightToLeft">

    <VerticalStackLayout Padding="20" 
            Spacing="25">
            <Label Text="الموقع" 
               TextColor="Black" 
               FontSize="22" 
               FontAttributes="Bold" 
               FontFamily="FontArabic" 
               HorizontalOptions="Center"/>

        <VerticalStackLayout Spacing="10">

            <Label Text=" المدينة" 
                   TextColor="Black" 
                   FontSize="16" 
                   FontAttributes="Bold" 
                   FontFamily="FontArabic"/>

     
            <Border
     Stroke="Black"
   
     StrokeShape="RoundRectangle 10">
                <Entry 
                   BackgroundColor="White" 
                   TextColor="Black" 
                   FontSize="14" 
                   
                  
                 /> 
              </Border>

            <Label Text=" الحي" 
                   TextColor="Black" 
                   FontSize="16" 
                   FontAttributes="Bold" 
                   FontFamily="FontArabic"/>
            <Border
                Stroke="Black"
              
                StrokeShape="RoundRectangle 10">
                <Entry Placeholder="" 
                   BackgroundColor="White" 
                   TextColor="Black" 
                   FontSize="14" 
                   HeightRequest="50" 
                   
                  /> </Border>

            <Label Text=" الشارع" 
                   TextColor="Black" 
                   FontSize="16" 
                   FontAttributes="Bold" 
                   FontFamily="FontArabic"/>
        
            <Border
     Stroke="Black"
   
     StrokeShape="RoundRectangle 10">
                <Entry Placeholder="" 
                   BackgroundColor="White" 
                   TextColor="Black" 
                   FontSize="14" 
                   HeightRequest="50" 
                  
                   />
                </Border>

            <Label Text=" رقم المنزل/ الشقة" 
                   TextColor="Black" 
                   FontSize="16" 
                   FontAttributes="Bold" 
                   FontFamily="FontArabic"/>
                
            <Entry Placeholder="" 
                   BackgroundColor="White" 
                   TextColor="Black" 
                   FontSize="14" 
                   HeightRequest="50" 
                  
                   Margin="0,0,0,10"/>

        </VerticalStackLayout>

        <HorizontalStackLayout VerticalOptions="Center">
            <CheckBox/>
            <Label Text=" حفظ العنوان " 
                   TextColor="Black" 
                   FontSize="14" 
                   FontFamily="FontArabic" 
                   VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <Button Text=" التالي" 
                BackgroundColor="#3E6F41" 
                TextColor="White" 
                FontSize="16" 
                FontAttributes="Bold" 
                FontFamily="FontArabic" 
                CornerRadius="15" 
                HorizontalOptions="Fill" 
                HeightRequest="50"/>

    </VerticalStackLayout>

</ContentPage> 