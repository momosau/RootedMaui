<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.Pages.CategoriesPage"
             Title="CategoriesPage"
             BackgroundColor="#E7E9E4">
    
    <CollectionView ItemsSource="{Binding Categories}"
              HeightRequest="600"
              VerticalScrollBarVisibility="Always"
                  Margin="0,20,0,20">
        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical" Span="2"/>
            <!-- 3 بطاقات في كل صف -->
        </CollectionView.ItemsLayout>
        
       
        
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Button Text="{Binding}" Clicked="OnCategorySelected"/>
            </DataTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="10,12" CornerRadius="15" BackgroundColor="White"
                 HasShadow="True"
                 WidthRequest="100" HeightRequest="140">
                    <!-- ضبط حجم البطاقات -->
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Image Source="{Binding imagesURL}" 
                         HeightRequest="70" WidthRequest="70" 
                         Aspect="AspectFill" 
                         HorizontalOptions="Center"/>
                        <Label Text="{Binding categoryName}" 
                         FontSize="12" 
                         TextColor="#333"
                         FontAttributes="Bold"
                         HorizontalTextAlignment="Center"
                         VerticalTextAlignment="Center"
                         Margin="3"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>