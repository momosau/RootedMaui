<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.Pages.PaymentMethodPage"
              Title="طرق الدفع" 
             BackgroundColor="#E7E9E4" 
             Shell.NavBarIsVisible="False" 
             FlowDirection="RightToLeft">
   
        <VerticalStackLayout Padding="20" 
                         Spacing="30">

        <Label Text=" طرق الدفع " 
               TextColor="Black" 
               FontSize="22" 
               FontAttributes="Bold" 
               FontFamily="FontArabic" 
               HorizontalOptions="Center"/>

        <VerticalStackLayout Spacing="15">

            <Frame BorderColor="Gray" 
                   BackgroundColor="White"
                   CornerRadius="10" 
                   Padding="15">
                <Grid ColumnDefinitions="*, Auto">
                    <Label Text=" الدفع عند الاستلام " 
                           TextColor="Black" 
                           FontSize="16" 
                           FontFamily="FontArabic" 
                           VerticalOptions="Center"/>
                    
                    <RadioButton x:Name="CashRadioButton"
                      IsChecked="False"
                        Grid.Column="1" 
                                 GroupName="PaymentOptions" 
                                 VerticalOptions="Center"/>
                </Grid>
            </Frame>

            <Frame BorderColor="Gray" 
                    BackgroundColor="White"
                   CornerRadius="10" 
                   Padding="15">
                <Grid ColumnDefinitions="*, Auto">
                    <Label Text=" الدفع عن طريق البطاقة" 
                           TextColor="Black" 
                           FontSize="16" 
                           FontFamily="FontArabic" 
                           VerticalOptions="Center"/>
                    <RadioButton Grid.Column="1" 
                               x:Name="CardRadioButton"
                                   IsChecked="False"
                               
GroupName="PaymentOptions" 
VerticalOptions="Center"/>
                </Grid>
            </Frame>
        </VerticalStackLayout>
        <Button Text="التالي" 
                x:Name="NextPaymnet"
BackgroundColor="#3E6F41" 
TextColor="White" 
FontSize="16" 
FontAttributes="Bold" 
FontFamily="FontArabic" 
CornerRadius="15" 
HorizontalOptions="Fill" 
HeightRequest="50"
              Clicked="NextPaymnet_Clicked"/>
        
    </VerticalStackLayout>
  
</ContentPage>