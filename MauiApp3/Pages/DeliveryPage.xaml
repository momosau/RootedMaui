<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.Pages.DeliveryPage"
             Title="DeliveryPage"
               BackgroundColor="#E7E9E4"
  Shell.NavBarIsVisible="False">
    <ScrollView>
    <VerticalStackLayout Padding="20">
        <!-- when user clicks on button they are navigated to the home screen -->
        <Button 
              Text="✖"
              FontSize="18"
              BackgroundColor="Transparent"
              HorizontalOptions="End"
            />
            <!-- image that changes based on the order status   Clicked="OnCloseButtonClicked"/> -->
            <Image 
              x:Name="StatusImage" 
              HeightRequest="80" 
              HorizontalOptions="Center"/>
            <!-- this a text that shows the order status -->
            <Label 
              x:Name="StatusLabel" 
              FontSize="18" 
              TextColor="DarkGreen" 
              HorizontalOptions="Center"
              HorizontalTextAlignment="End"/>

            <!-- this is a set of icons that show the progress of the order. each icon represents a step, the icons will be gray at the beginning but change to gray to show the current status -->
            <Grid 
              ColumnDefinitions="*,*,*,*" 
              Padding="10">
                <Image 
                  x:Name="IconDelivered" 
                  Source="orderdelivered.png" 
                  Opacity="0.5"/>
                <Image 
                  x:Name="IconOutForDelivery" 
                  Source="orderoutfor_delivery.png" 
                  Opacity="0.5"/>
                <Image 
                  x:Name="IconShipped" 
                  Source="ordershipped.png" 
                  Opacity="0.5"/>
                <Image 
                  x:Name="IconAccepted" 
                  Source="orderaccepted.png" 
                  Opacity="0.5"/>
            </Grid>
            <!-- this shows the order details -->
            
            <Frame 
              Padding="10" 
              CornerRadius="10">
                <!-- this shows the order number -->
                <StackLayout>
                    <Label 
                  x:Name="OrderNumberLabel" 
                  FontSize="16" 
                  FontAttributes="Bold"
                  HorizontalTextAlignment="End"/>
                
               
                <!-- this lists the ordered items -->
                <CollectionView 
                  x:Name="OrderItemsList">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <HorizontalStackLayout 
                              Spacing="10"
                              FlowDirection="RightToLeft">
            <!-- this shows the item image -->
                                <Image 
                                  Source="{Binding ImageUrl}" 
                                  HeightRequest="40"/>
                                <VerticalStackLayout>
            <!-- this shows the item name -->
                                    <Label 
                                      Text="{Binding ProductName}" 
                                      FontSize="14"
                                      HorizontalTextAlignment="End"/>
            <!-- this shows the item price -->
                                    <Label 
                                      Text="{Binding Price}" 
                                      FontSize="14" 
                                      TextColor="Gray"
                                      HorizontalTextAlignment="End"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                </StackLayout>
            </Frame>

            <!-- this will show the order summary; product price, delivery price, and the total -->
            <Frame 
              Padding="10" 
              CornerRadius="10">
                <StackLayout>
                    <Label 
                  Text="ملخص الطلب" 
                  FontSize="16" 
                  FontAttributes="Bold"
                  HorizontalTextAlignment="End"/>
                <Grid 
                  RowDefinitions="Auto,Auto,Auto">
                    <Label 
                      Text="سعر المنتجات" 
                      Grid.Row="0" 
                      HorizontalTextAlignment="End"/>
                    <Label 
                      x:Name="ItemTotalLabel" 
                      Grid.Row="0" 
                      HorizontalTextAlignment="Start"/>

                    <Label 
                      Text="رسوم التوصيل" 
                      Grid.Row="1" 
                      HorizontalTextAlignment="End"/>
                    <Label 
                      x:Name="DeliveryFeeLabel" 
                      Grid.Row="1"
                      HorizontalTextAlignment="Start"/>

                    <Label 
                      Text="إجمالي الدفع" 
                      FontAttributes="Bold"
                      Grid.Row="2"
                      HorizontalTextAlignment="End"/>
                    <Label 
                      x:Name="TotalLabel"
                      FontAttributes="Bold"
                      Grid.Row="2"
                      HorizontalTextAlignment="Start"/>
                </Grid>
                </StackLayout>
            </Frame>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>