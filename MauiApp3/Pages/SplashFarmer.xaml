             x:Class="MauiApp3.SplashFarmer"
             Title="SplashFarmer"
          BackgroundColor="#E7E9E4"
            Shell.NavBarIsVisible="False"
             >

 
    <VerticalStackLayout 
        VerticalOptions="Center" 
        HorizontalOptions="Center" Spacing="100"                          >
        <Image Source="rooted_logo.png"
       WidthRequest="300" HeightRequest="300"/>

        <Label 
    Text=" مرحبًا بزارع المجد والأصالة"
    TextColor="#6D3D24"
 
     VerticalOptions="CenterAndExpand"
     HorizontalOptions="CenterAndExpand" 
