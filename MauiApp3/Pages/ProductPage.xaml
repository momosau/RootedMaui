<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.Pages.ProductPage"
             xmlns:Models="clr-namespace:MauiApp3.Models"
             xmlns:ModelView="clr-namespace:MauiApp3.ModelView"
             x:DataType="ModelView:ProductPageViewModel"
             BackgroundColor="#E7E9E4" 
             FlowDirection="RightToLeft" 
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="10">
            <!-- Category CollectionView -->
            <CollectionView ItemsSource="{Binding Categories}" SelectionMode="Single" SelectionChanged="OnCategorySelected">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Horizontal"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="8" Padding="10" Background="White" >
                            <VerticalStackLayout>
                                <Label Text="categoty" FontSize="Large" HorizontalTextAlignment="Center" TextColor="Black"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <!-- Product CollectionView -->
            <CollectionView ItemsSource="{Binding FilteredProducts}" BackgroundColor="White" >
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="12" Padding="15" Margin="10" BackgroundColor="White">
                            <VerticalStackLayout Spacing="10">
                                <!-- Product Image -->
                                <Image WidthRequest="250"  HeightRequest="250" Source="{Binding }" Aspect="AspectFill" HorizontalOptions="Center" BackgroundColor="LightGray"/>
                              
                                <!-- Name & Weight Section -->
                                <HorizontalStackLayout Spacing="5" HorizontalOptions="FillAndExpand">
                                    <Label Text="{Binding }" FontSize="2" HorizontalOptions="Center" FontAttributes="Bold" TextColor="#2c3e50"/>
                                    <Label Text="{Binding }"  FontSize="20" TextColor="#34495e"/>
                                    <Label Text="{Binding }"  FontSize="20" TextColor="#34495e"/>
                                </HorizontalStackLayout>
                                <!-- Price Section -->
                              <!--  <Label Text="{Binding price, StringFormat='{0} ريال'}" FontSize="22" HorizontalOptions="Center" TextColor="White" FontAttributes="Bold"/>
    -->                            <VerticalStackLayout >
                                    <Label Text="{Binding}" FontSize="20" TextColor="#34495e"/>
                                </VerticalStackLayout>
                                <HorizontalStackLayout Spacing="10" VerticalOptions="Center" HorizontalOptions="Start">
                                    <Button Text="+" Background="White" TextColor="Green" Clicked="AddButtonClicked" CornerRadius="100" WidthRequest="40" HeightRequest="40" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
         
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
