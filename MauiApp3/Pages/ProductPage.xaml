<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.Pages.ProductPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:Models="clr-namespace:SharedLibraryy.Models;assembly=SharedLibraryy"
             xmlns:ModelView="clr-namespace:MauiApp3.ModelView"
             x:DataType="ModelView:ProductPageViewModel"
             BackgroundColor="#E7E9E4" 
             FlowDirection="RightToLeft" 
             Shell.NavBarIsVisible="False"
             >

    <ScrollView>
        <VerticalStackLayout >
            <!-- Category CollectionView -->
          
                <CollectionView ItemsSource="{Binding SelectedCategory}">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Horizontal" Span="2"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Button Text="{Binding}"
                            Command="{Binding ChangeCategoryCommand}"
                            CommandParameter="{Binding}"
                            BackgroundColor="{Binding ., Converter={StaticResource CategoryToColorConverter}}"/>
                    </DataTemplate>
                    
                </CollectionView.ItemTemplate>
            </CollectionView>
            <!-- Product CollectionView -->
            <CollectionView ItemsSource="{Binding FilteredProducts}" BackgroundColor="White" >
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="Models:Product">
                        <Frame CornerRadius="12" Padding="15" Margin="10" BackgroundColor="White">
                            <VerticalStackLayout Spacing="10">
                                <!-- Product Image -->
                                <Image WidthRequest="250"  HeightRequest="250" Source="{Binding ImageUrl}" Aspect="AspectFill" HorizontalOptions="Center" BackgroundColor="LightGray"/>
                                <!-- Name & Weight Section -->
                                <HorizontalStackLayout Spacing="5" HorizontalOptions="FillAndExpand">
                                    <Label Text="{Binding Name }" FontSize="2" HorizontalOptions="Center" FontAttributes="Bold" TextColor="#2c3e50"/>
                                    <Label Text="{Binding Weight }"  FontSize="20" TextColor="#34495e"/>
                                    <Label Text="{Binding Unit }"  FontSize="20" TextColor="#34495e"/>
                                </HorizontalStackLayout>
                             
                                <HorizontalStackLayout Spacing="10" VerticalOptions="Center" HorizontalOptions="Start">

                                    <Label Text="{Binding Price, StringFormat='{0} ريال'}" FontSize="22" HorizontalOptions="Center" TextColor="White" FontAttributes="Bold"/>
                                 <!---   <Label Text="{Binding FarmName }"  FontSize="20" TextColor="#34495e"/>-->
                                    <Button Text="+" Background="White" TextColor="Green"  CornerRadius="100" WidthRequest="40" HeightRequest="40" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
