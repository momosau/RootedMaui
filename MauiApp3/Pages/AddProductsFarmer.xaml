<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.Pages.AddProductsFarmer"
             Title="AddProductsFarmer"
              xmlns:vm="clr-namespace:MauiApp3.ModelView"
            
                     
             BackgroundColor="#E7E9E4" 
FlowDirection="RightToLeft">
    <ScrollView Padding="10">
        <StackLayout>
            <Entry x:Name="ProductName" Placeholder="Product Name" Text="{Binding Product.Name}" />
            <Entry x:Name="ProductPrice" Placeholder="Price" Keyboard="Numeric" Text="{Binding Product.Price}" />
            <Entry x:Name="ProductCategory" Placeholder="Category" Text="{Binding Product.Category}" />
            <Entry x:Name="ProductWeight" Placeholder="Weight" Keyboard="Numeric" Text="{Binding Product.Weight}" />
            <Button Text="Select Image" Command="{Binding SelectImageCommand}" />
            <Image Source="{Binding Product.ImageUrl}" HeightRequest="200" />
            <Button Text="Save Product" Command="{Binding SaveProductCommand}" />
        </StackLayout>
    </ScrollView>
</ContentPage>