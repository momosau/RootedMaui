<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.Pages.AddProductsFarmer"
             Title="AddProductsFarmer"
              xmlns:vm="clr-namespace:MauiApp3.ModelView"
            
                     
             BackgroundColor="#E7E9E4" 
FlowDirection="RightToLeft">
    <ScrollView>

        <StackLayout Padding="10">

        <!-- Product List -->
        <CollectionView ItemsSource="{Binding Products}" SelectionMode="Single"
                        SelectionChanged="OnProductSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="DarkGreen" Padding="10">
                        <StackLayout>
                            <Label Text="{Binding Name}" FontSize="20" TextColor="White"/>
                            <Label Text="{Binding Price, StringFormat='Price: {0:C}'}" TextColor="white"/>
                            <Label Text="{Binding Quantity, StringFormat='Quantity: {0}'}" TextColor="white"/>
                               
                            </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Add Product" Command="{Binding AddProductCommand}" />

        <!-- Product Detail Form (Visible when Editing) -->
        <StackLayout IsVisible="{Binding IsEditing}">
                <Image Source="{Binding SelectedProduct.Image ,Mode=TwoWay}" HeightRequest="200"/>
            <Button Text="Pick Image" Command="{Binding PickImageCommand}"/>

                <Entry Placeholder="Name" Text="{Binding SelectedProduct.Name, Mode=TwoWay}" TextColor="White"/>
                <Entry Placeholder="Price" Text="{Binding SelectedProduct.Price ,Mode=TwoWay}"  TextColor="White"/>
                <Entry Placeholder="Quantity" Text="{Binding SelectedProduct.Quantity, Mode=TwoWay}"  TextColor="White"/>

            <Button Text="Save Changes" Command="{Binding SaveChangesCommand}"/>
        </StackLayout>

    </StackLayout>
    </ScrollView>
</ContentPage>