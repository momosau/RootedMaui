<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.Pages.Consumers.CEmailVerification"
             Title="CEmailVerification"            
             BackgroundColor="#E7E9E4" 
             Shell.NavBarIsVisible="False"
             FlowDirection="RightToLeft">

    <Grid VerticalOptions="Center" Padding="20">
        <VerticalStackLayout Spacing="45" 
                             HorizontalOptions="Center" 
                             VerticalOptions="Center">

            <ActivityIndicator x:Name="loadingIndicator" 
                               IsVisible="False" 
                               Color="#3E6F41"
                               HorizontalOptions="Center"/>

            <Image Aspect="AspectFit" 
                   HeightRequest="100" 
                   Source="rooted_logo.png"/>

            <Label Text="التحقق من البريد الالكتروني" 
                   FontSize="22" 
                   TextColor="#6D3D24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"/>

            <Label Text="تم إرسال رمز التحقق إلى البريد الالكتروني المدخل" 
                   FontSize="16" 
                   TextColor="#6D3D24" 
                   HorizontalOptions="Center" 
                   LineBreakMode="WordWrap" 
                   FontAttributes="Bold" 
                   HorizontalTextAlignment="Center"/>

            <!-- Label to show the actual email -->
            <Label x:Name="emailLabel"
                   FontSize="14"
                   TextColor="#3E6F41"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   LineBreakMode="WordWrap"
                   HorizontalTextAlignment="Center"/>

            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"
                         Spacing="10">

                <Border Stroke="#71873F" 
                        StrokeThickness="2" 
                        WidthRequest="50" 
                        HeightRequest="50" 
                        Background="White" 
                        StrokeShape="RoundRectangle 8">
                    <Entry x:Name="pin1" 
                           MaxLength="1"
                           Keyboard="Numeric"
                           FontSize="15"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="Black"
                           TextChanged="MoveText"/>
                </Border>

                <Border Stroke="#71873F" 
                        StrokeThickness="2" 
                        WidthRequest="50" 
                        HeightRequest="50" 
                        Background="White" 
                        StrokeShape="RoundRectangle 8">
                    <Entry x:Name="pin2" 
                           MaxLength="1"
                           Keyboard="Numeric"
                           FontSize="15"
                           TextColor="Black"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextChanged="MoveText"/>
                </Border>

                <Border Stroke="#71873F" 
                        StrokeThickness="2" 
                        WidthRequest="50" 
                        HeightRequest="50" 
                        Background="White" 
                        StrokeShape="RoundRectangle 8">
                    <Entry x:Name="pin3" 
                           MaxLength="1"
                           Keyboard="Numeric"
                           TextColor="Black"
                           FontSize="15"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextChanged="MoveText"/>
                </Border>

                <Border Stroke="#71873F" 
                        StrokeThickness="2" 
                        WidthRequest="50" 
                        HeightRequest="50" 
                        Background="White" 
                        StrokeShape="RoundRectangle 8">
                    <Entry x:Name="pin4" 
                           MaxLength="1"
                           Keyboard="Numeric"
                           FontSize="15"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="Black"
                           TextChanged="MoveText"/>
                </Border>
            </StackLayout>

            <Button x:Name="verifyButton"
                    Text="التحقق" 
                    BackgroundColor="#3E6F41" 
                    TextColor="White" 
                    FontSize="15" 
                    CornerRadius="10" 
                    Padding="10" 
                    HorizontalOptions="Center" 
                    FontAttributes="Bold"
                    WidthRequest="250" 
                    Clicked="VerifyCode"/>

            <Button x:Name="resendButton"
                    Text="إعادة إرسال الرمز"  
                    TextColor="#6D3D24"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center" 
                    FontSize="14"
                    FontAttributes="Bold"
                    Clicked="OnResendClicked"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
