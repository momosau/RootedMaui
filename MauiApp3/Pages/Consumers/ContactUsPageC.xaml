<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.Pages.Consumers.ContactUsPageC"
              Title="تواصل معنا" 
              BackgroundColor="#E7E9E4"
              FlowDirection="RightToLeft" 
             Shell.ForegroundColor="Aqua"
            >
    <ScrollView>
        <Grid Padding="20">
        <VerticalStackLayout Spacing="20" 
                             HorizontalOptions="Center" 
                             VerticalOptions="Center">

            <Image Source="rooted_logo.png" 
                   HeightRequest="120" 
                   Aspect="AspectFit" 
                   HorizontalOptions="Center"/>

            <Label Text=" تواصل معنا " 
                   FontSize="22" 
                   TextColor="#0E3230" 
                   FontFamily="FontArabic" 
                   FontAttributes="Bold" 
                   HorizontalTextAlignment="Center"/>

            <HorizontalStackLayout Spacing="5" 
                                   HorizontalOptions="Center">
                <Label Text="+966530000000" 
                       FontSize="16" 
                      TextColor="#0E3230" 
                       FontFamily="FontArabic" 
                       FontAttributes="Bold" 
                       FlowDirection="LeftToRight" 
                      
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                      />
                <Image Source="phone_icon.png" 
                       WidthRequest="20" 
                       HeightRequest="20" 
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="5" 
                                   HorizontalOptions="Center">
                <Label Text="RootedApp@gmail.com" 
                       FontSize="16" 
                      TextColor="#0E3230" 
                       FontFamily="FontArabic" 
                        FontAttributes="Bold" 
                       HorizontalTextAlignment="Start"/>
                <Image Source="email_icon.png" 
                       WidthRequest="20" 
                       HeightRequest="20" 
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <Label Text="اطرح استفسارك أو سؤالك:" 
                   FontSize="16" 
                 TextColor="#0E3230" 
                   FontFamily="FontArabic" 
                    FontAttributes="Bold" 
                   HorizontalTextAlignment="Center"/>
                <Label Text="البريد الإلكتروني" 
                   FontAttributes="Bold" 
                   FontSize="14" 
                   TextColor="#0E3230" 
                   FontFamily="FontArabic" 
                   HorizontalTextAlignment="Start" 
                   WidthRequest="300"/>

                <Border StrokeThickness="1" BackgroundColor="White" Padding="5" StrokeShape="RoundRectangle 15" Stroke="#71873F">
                    <Entry x:Name="EmailEntry"
                       Placeholder="example@email.com"
                       Keyboard="Email"
                       TextColor="#0E3230"
                       BackgroundColor="White"
                       FontFamily="FontArabic"
                       WidthRequest="300"/>
                </Border>

                <Label Text="رسالتك" 
                   FontAttributes="Bold" 
                   FontSize="14" 
                   TextColor="#0E3230" 
                   FontFamily="FontArabic" 
                   HorizontalTextAlignment="Start" 
                   WidthRequest="300"/>

                <Border StrokeThickness="1" BackgroundColor="White" Padding="5" StrokeShape="RoundRectangle 15" Stroke="#71873F">
                    <Editor x:Name="MessageEditor"
                        BackgroundColor="White" 
                        TextColor="#0E3230" 
                        FontFamily="FontArabic" 
                        WidthRequest="300" 
                        HeightRequest="100"
                        HorizontalTextAlignment="Start"/>
                </Border>

                <Button Text="إرسال"
                    BackgroundColor="#71873F"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontFamily="FontArabic"
                    WidthRequest="300"
                    Clicked="SendButton_Clicked"/>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage> 

            